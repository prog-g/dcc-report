{
  "extends": [
    "config:base",
    ":unpublishSafe",
    ":prNotPending",
    ":timezone(Asia/Tokyo)",
    ":label(renovate)",
    ":automergePatch",
    ":automergeBranch",
    ":maintainLockFilesMonthly"
  ],
  "rangeStrategy": "bump",
  "prNotPendingHours": 72,
  "packageRules": [
    {
      "groupName": "dependencies (minor)",
      "depTypeList": ["dependencies"],
      "updateTypes": ["minor"],
      "schedule": ["before 8am on monday"]
    },
    {
      "groupName": "devDependencies (minor)",
      "depTypeList": ["devDependencies"],
      "updateTypes": ["minor"],
      "schedule": ["before 8am on tuesday"]
    }
  ],
  "major": {
    "stabilityDays": 4
  },
  "minor": {
    "stabilityDays": 2
  },
  "patch": {
    "stabilityDays": 2
  }
}
